<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauipr9.PatternLockView"
             Title="Графический ключ">

    <VerticalStackLayout Padding="20">
        <Label x:Name="StatusLabel" Text="Нарисуйте паттерн" HorizontalOptions="Center"/>

        <GraphicsView x:Name="GraphicsView"
                      HeightRequest="300"
                      WidthRequest="300"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>

        <Button x:Name="ConfirmButton" Text="Подтвердить" IsEnabled="False"
                Clicked="OnConfirmClicked" BackgroundColor="Green" TextColor="White" Margin="0,20"/>
    </VerticalStackLayout>
</ContentPage>