<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauipr9.StudentListPage"
             Title="Список студентов">

    <StackLayout>
        <Button Text="➕ Добавить студента" Clicked="OnAddClicked" 
                BackgroundColor="Green" TextColor="White" Margin="10"/>

        <ScrollView>
            <StackLayout x:Name="StudentsStack" Padding="10" Spacing="10">
                <!-- Студенты будут добавлены здесь -->
            </StackLayout>
        </ScrollView>

        <Label x:Name="EmptyLabel" Text="Нет студентов" IsVisible="False" 
               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>